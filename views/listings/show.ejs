<% layout('layouts/boilerplate') %>

<body>
    <div class="row">
        <div class="col-8 offset-3">
            <p class="h2"><%= post.title %></p>
        </div>

        <div class="card col-6 offset-3 show-card">
            <img src="<%=post.img%>" class="card-img-top" alt="Listing image">
            <div class="card-body">
                <p class="card-text">
                    <%=post.description %> <br>
                    &#8377;<%=post.price.toLocaleString("en-IN") %> <br>
                    <%=post.location %> <br>
                    <%=post.country %>  <br>
                </p>
            </div>
        </div>

        <!-- Button Row -->
        <div class="col-6 offset-3 d-flex justify-content-between mt-3">
    <a class="btn btn-dark" href="/listing/<%= post.id %>/edit">Edit</a>
    <form action="/listing/<%= post.id%>?_method=DELETE" method="POST">
        <button class="btn add-btn">Delete</button>
    </form>
</div>
<div class="col-8 offset-3 mb-3 mt-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listing/<%= post.id %>/reviews" method="post">
        <div class="rating">
                <label for="rating" class="form-label">Rating (1 to 5)</label>
                <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div class="comment mt-3 mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" class="form-control" id="comment" rows="5" cols="30"></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
</div>
</body>
