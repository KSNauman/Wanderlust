<% layout('layouts/boilerplate') %>
<!-- this was generated by gpt just for the responsiveness i used it but not rendering it for sure -->
<body>
  <div class="container py-4">
    <!-- Title -->
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 text-center mb-4">
        <h2><%= post.title %></h2>
      </div>
    </div>

    <!-- Card -->
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <div class="card show-card mb-4">
          <img src="<%= post.image.url %>" class="card-img-top" alt="Listing image">
          <div class="card-body">
            <p class="card-text">
              <%= post.description %><br>
              &#8377;<%= post.price.toLocaleString("en-IN") %><br>
              <%= post.location %><br>
              <%= post.country %>
            </p>
          </div>
        </div>

        <!-- Buttons: stacked on xs, inline from md up -->
        <div class="d-flex flex-column flex-md-row justify-content-between gap-2">
          <a href="/listing/<%= post.id %>/edit" class="btn btn-dark w-100 w-md-auto">Edit</a>
          <form action="/listing/<%= post.id %>?_method=DELETE" method="POST" class="w-100 w-md-auto">
            <button type="submit" class="btn add-btn w-100">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
