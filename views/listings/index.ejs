<% layout('layouts/boilerplate') %>
    <style>
        .filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
        }
        a .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
            transition:background-color 0.2s ease-in-out ;
        }
        a .filter:hover{
            opacity: 1;
            cursor: pointer;
            border-radius: 25px;
            background-color: rgb(235, 235, 235);
            transform: scale(1.05);
        }
        .filter p{
            font-size: 0.9rem;
        }
        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: black 1px solid;
            border-radius: 1rem;
            height: 3rem;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
        }
        a{
            text-decoration: none;
            color: black;
        }
    </style>
    <body>
        <!-- <h2>All Listings</h2> -->
        <div class="filters d-flex flex-nowrap overflow-auto">
            <a href="/listing/category/Trending">
                <div class="filter">
                    <div><i class="fa-solid fa-fire"></i></div>  
                    <p>Trending</p>
                </div>
            </a>
            <a href="/listing/category/Rooms">
                <div class="filter">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </div>
            </a>
            <a href="/listing/category/Iconic cities">

                <div class="filter">
                    <div><i class="fa-solid fa-city"></i></div>  
                    <p>Iconic cities</p>
                </div>
            </a>
            <a href="/listing/category/Mountains">
                <div class="filter">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Mountains</p>
                </div>
            </a>
            <a href="/listing/category/Castles">
                <div class="filter">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>  
                    <p>Castles</p>
                </div>
            </a>
            <a href="/listing/category/Amazing pools">
                <div class="filter">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing pools</p>
                </div>
            </a>
            <a href="/listing/category/Camping">
                <div class="filter">
                    <div><i class="fa-solid fa-campground"></i></div>  
                    <p>Camping</p>
                </div>
            </a>
            <a href="/listing/category/Farms">
                <div class="filter">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </div>
            </a>
            <a href="/listing/category/Arctic">
                <div class="filter">
                    <div><i class="fa-solid fa-snowman"></i></div>
                    <p>Arctic</p>
                </div>
            </a>
            <a href="/listing/category/Boats">
                <div class="filter">
                    <div><i class="fa-solid fa-ferry"></i></div>
                    <p>Boats</p>
                </div>
            </a>
                
            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label d-none d-lg-inline" for="flexSwitchCheckDefault">Display total after taxes</label>
                <label class="form-check-label d-lg-none" for="flexSwitchCheckDefault">Taxes</label>
                </div>
            </div>
    </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let post of Allposts){ %>
                <a href="/listing/<%=post.id %>" class="listing-link">
                    <div class="card listing-card col">
                        <img src="<%= post.img.url%>" class="card-img-top" alt="listing image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= post.title%>
                                </b> <br>
                                &#8377;<%=post.price.toLocaleString("en-IN") %> for 2 nights
                                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>


        <!-- <form action="/listing/new" method="get">
            <button>Add New Listing</button>
        </form> -->
    </body>

    <script>
        let taxtoggle = document.getElementById("flexSwitchCheckDefault");
        taxtoggle.addEventListener("click",()=>{
            let taxInfo = document.getElementsByClassName("tax-info")
            for(info of taxInfo){
                
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }else{
                    info.style.display = "none";
                }
            }
            
        })
    </script>